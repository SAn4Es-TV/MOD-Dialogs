label greeting_sweetheart:
    $ dlg_var = "этой ночью":
    if hour >= 4
        $ dlg_var = "этим утром"
    if hour >= 9:
        $ dlg_var = "этим днём"
    if hour >= 17:
        $ dlg_var = "этим вечером"

    m 1hub "Снова здравствуй, милый!"
    m 1eka "Рада видеть тебя снова."
    m 1eua "Что будем делать [dlg_var], [player]?"
    return

label greeting_honey:
